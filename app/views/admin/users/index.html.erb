<% provide(:title, "Index") %>
<h1>All user</h1>
<% if @users.present? %>
  <table class = "table table-bordered width-table90">
    <thead>
      <tr>
        <th>ID</th>
        <th>Full name</th>
        <th>Email</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.code %></td>
          <td><%= link_to user.full_name, admin_user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= user.type %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>We don't have any users </h3>
<% end %>