<%= form_for [@user, @chat_group] do |f| %>
  <%= render "shared/error_messages", object: @chat_group %>
  <table class = "table table-bordered width-table80">
  	<tr>
      <td width = "20%"><%= f.label :farm_id %></td>
      <td>
        <div class = "magrin-right-3percent">
          <%= f.select :farm_id, options_for_select(Farm.all.map{|farm| [farm.name, farm.id]}, {selected: @chat_group.farm_id}), include_blank: t(".blank") %>
        </div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :name %></td>
      <td><div class = "magrin-right-3percent"><%= f.text_field :name %></div></td>
    </tr>
    <tr>
      <td><%= f.label :description %></td>
      <td><div class = "magrin-right-3percent"><%= f.text_area :description %></div></td>
    </tr>
    <tr>
      <td><%= f.label :note %></td>
      <td><div class = "magrin-right-3percent"><%= f.text_area :note %></div></td>
    </tr>
    <tr>
      <td colspan="2">
        <div class="center">
          <% if @chat_group.new_record? %>
            <%= f.submit "Create chat group", class: "btn btn-primary" , id: "submit"%>
          <% else %>
            <%= f.submit "Update chat group", class: "btn btn-primary" , id: "submit"%>
          <% end %>
        </div>
      </td>
    </tr>
  </table>
<% end %>